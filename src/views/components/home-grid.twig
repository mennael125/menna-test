<section class="container mx-auto py-10">
  <div class="flex flex-col md:flex-row gap-4">
    {# الصورة الأولى في عمود منفرد #} {% set item = component['grid-img-1'][0]
    %}
    <div class="relative w-full md:w-1/2 h-[576px] rounded-md overflow-hidden">
      <img
        src="{{ item['img-1'] }}"
        alt="صورة"
        class="w-full h-full object-cover"
      />
      <div
        class="absolute inset-0 text-white p-6 flex flex-col justify-center"
        style="background-color: {{ item['img1-color'] }}cc;"
      >
        <h2 class="text-xl font-bold mb-2">{{ item["grid-imh-txt-1"] }}</h2>
        <p class="text-sm mb-4">{{ item["grid-img-sub-1"] }}</p>
        {% if item['img-url-1'] %}
        <a href="{{ item['img-url-1'] }}" class="btn btn-primary w-max"
          >تسوق الآن</a
        >
        {% endif %}
      </div>
    </div>

    {# الصورتين التانية والتالتة في نفس العمود #}
    <div class="flex flex-col gap-4 w-full md:w-1/2">
      {% for item in [component['grid-img-1'][1], component['grid-img-1'][2]] %}
      <div class="relative h-[288px] rounded-md overflow-hidden">
        <img
          src="{{ item['img-1'] }}"
          alt="صورة"
          class="w-full h-full object-cover"
        />
        <div
          class="absolute inset-0 text-white p-6 flex flex-col justify-center"
          style="background-color: {{ item['img1-color'] }};"
        >
          <h2 class="text-xl font-bold mb-2">{{ item["grid-imh-txt-1"] }}</h2>
          <p class="text-sm mb-4">{{ item["grid-img-sub-1"] }}</p>
          {% if item['img-url-1'] %}
          <a href="{{ item['img-url-1'] }}" class="btn btn-primary w-max"
            >تسوق الآن</a
          >
          {% endif %}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
